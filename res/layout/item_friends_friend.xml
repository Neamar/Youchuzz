<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friends_item_holder"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical" >

    <CheckBox
        android:id="@+id/friends_item_friend_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false" />

    <ImageView
        android:id="@+id/friends_item_friend_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:scaleType="center"
        android:contentDescription="@string/friends_ui_item_avatar"
        android:src="@drawable/friend_placeholder" />

    <TextView
        android:id="@+id/friends_item_friend_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/friends_ui_item_name" />

</LinearLayout>