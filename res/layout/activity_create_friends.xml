<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_gradient" >

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publier sur mon mur"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <include layout="@layout/activity_create_friends_item"             android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
	<include layout="@layout/activity_create_friends_item2"             android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

	<Button
	    android:id="@+id/button1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="bottom|center"
	    android:text="Envoyer mon chuzz" />

</LinearLayout>